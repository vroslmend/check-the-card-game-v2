{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS", 
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "shared-types/*": ["../shared-types/dist/*"],
      "shared-types": ["../shared-types/dist/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../shared-types" }
  ]
} 